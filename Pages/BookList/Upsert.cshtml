@page
@model ASP.netCore1.Pages.BookList.UpsertModel
@{
}
@{
    var title = Model.Book.Id != 0 ? "Edit" : "New Book";
    var saveupdate = Model.Book.Id != 0 ? "Update" : "Save";
}
<h2 class="text-success">@title</h2>
<hr /> 
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @if(Model.Book.Id != 0){
        <input type="hidden" asp-for="Book.Id" />
    }
    <div class="container rounded border">
        <div class="form-group row p-2 m-2">
            <div class="col-3">
                <label asp-for="Book.Title"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Title" class="form-control" />
                <span asp-validation-for="Book.Title" class="text-danger"></span>
            </div>

        </div>
        <div class="form-group row p-2 m-2">
            <div class="col-3">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Author" class="form-control" />
                <span asp-validation-for="Book.Author" class="text-danger"></span>
            </div>

        </div>
        <div class="form-group row p-2 m-2">
            <div class="col-3">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.ISBN" class="form-control" />
                <span asp-validation-for="Book.ISBN" class="text-danger"></span>
            </div>

        </div>
        <div class="form-group row p-2 m-2">
            <div class="col-3">
                <label asp-for="Book.Price"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Price" class="form-control" />
                <span asp-validation-for="Book.Price" class="text-danger"></span>
            </div>

        </div>
        <div class="form-group row p-1 m-1">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-success form-control">@saveupdate</button>
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-primary form-control">Back to List</a>
            </div>
           
        </div>
    </div>
</form>
@section scripts{
    <partial name="_validationScriptsPartial" />
}